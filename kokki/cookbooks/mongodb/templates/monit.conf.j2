
check process mongodb_{{ name }} with pidfile {{ mongodb.dbpath }}/mongod.lock
	start program = "start-stop-daemon -S -p {{ mongodb.dbpath }}/mongod.lock -c mongodb -a /usr/bin/mongod -- --config {{ mongodb.configpath }} --fork {{ " ".join(mongodb.options) }}"
	stop program = "start-stop-daemon -K -p {{ mongodb.dbpath }}/mongod.lock"
	if 5 restarts within 5 cycles then timeout
